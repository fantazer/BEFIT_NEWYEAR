.line
	width: 100%
	height: 1px

.block-mid
	margin 0 auto

.disabled
	cursor default
	opacity .5
	pointer-events none

.hidden
	display none !important

.hide
	display none

.hideOpacity
	opacity: 0
	tr()

.show
	display block !important

.border
	height: 1px
	background: #DCDFE8
	width: 100%

.invisible
	visibility hidden

.old-browser
	background grey
	width 100%
	height 100vh
	padding-top 200px

.old-browser-text
	text-align center
	color white
	font-size 20px

.filter-layer
	position absolute
	top 0
	left 0
	width: 100%
	height: 100%
	background:#1111119c

.drop
	transform: scaleY(0)
	tr()
	transform-origin: top
	opacity: 0

.drop.active
	transform: scaleY(1)
	opacity: 1

.pos-cover
	top 0
	left 0
	width: 100%
	height: 100%

.cp
	cp()

.tr
	tr()

.sm__cover-size
	+below(640px)
		margin-left: -20px
		margin-right -20px
		width calc(100% + 40px)
.h-100
	height: 100%

@media screen and (-webkit-min-device-pixel-ratio:0)
	select:focus,
	textarea:focus,
	input:focus
		font-size: 16px;
		background: #eee;

@media screen and (-webkit-min-device-pixel-ratio:0)
	select,
	textarea,
	input
		font-size: 16px!important

.list
	display: grid
	grid-gap 28px

.list--three
	grid-template-columns: repeat(auto-fill, minmax(16rem, 1fr));

.mobile-order-2
	+below(640px)
		order 2
.mobile-order-1
	+below(640px)
		order 1

.bor-1
	border 1px solid $border-color

.overflow
	overflow: hidden

.hideMobileScroll
	+below(1024px)
		&::-webkit-scrollbar
			background-color:transparent!important
			display none
			 -webkit-appearance: none;

.scroll-template
	&::-webkit-scrollbar
		-webkit-appearance: none
		width: 7px
		background: #f3f3f3
	&::-webkit-scrollbar-thumb
		border-radius: 2px
		background-color: rgba(0, 0, 0, .1)
		-webkit-box-shadow: 0 0 1px rgba(255, 255, 255, .5)

