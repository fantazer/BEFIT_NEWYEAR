h5
	@extend .type--md
	color black
	margin: 0
h4
	@extend .type--mdx
	color black
	margin: 0
h3
	@extend .type--lg
	color black
	margin: 0
h2
	@extend .type--lgx
	color black
	margin: 0
h1
	@extend .type--xl
	color black
	margin: 0

a
	color $link-color
	text-decoration: none
	tr()
	&:hover
		color darken($link-color,20)
	&:visiter
		color darken($link-color,30)

p
	@extend .type--main

.link--mark
	color $mark
	cp()
	transition color .4s
	&:hover
		color $greenDark
	&:visiter
		color $greenDark

.link
	cp()
	transition color .4s
	color $link-color
	&:hover
		color $mark
	&:visiter
		color $mark

.link--text
	color $link-color
	text-decoration underline
	&:hover
		text-decoration none


.text
	color black
	h1,h2,h3,h4,h5
		margin 3.5rem 0 2rem
	h1:first-of-type,
	h2:first-of-type,
	h3:first-of-type,
	h4:first-of-type,
	h5:first-of-type,
	h6:first-of-type,
	p
		margin-top: 0!important
	a:not(.btn--md):not(.btn--sm)
		@extend .link--mark
	& > img
		@extend .msv-64
		+below(640px)
			margin: 32px 0
	p
		line-height: 1.6
		margin-bottom: 30px
		&:first-child
			margin-top: 0
		&:last-child
			margin-bottom: 0
	ul
		margin-bottom: 30px
		padding-left 26px
		list-style none
		&.msv-0
			margin: 0
		&.list--orange
			li
				&:before
					border 2px solid $orange
		li
			line-height: 1.6
			margin-bottom: 16px
			position relative
			//font-weight: 700
			&:before
				content ''
				position absolute
				size 12px
				round()
				border 2px solid $mark
				left -26px
				top .6rem
			&:last-child
				margin-bottom: 0



// icons
.icon-row
	f()
	align-items center
	span
		width calc(100% - 36px)
.icon-row--extend
	margin-bottom: 32px


.icon
	size 24px

.icon--sm
	size 18px
	min-width 18px
	img
		width: 100%

.icon--smx
	size 24px
	min-width 24px
	img
		width: 100%

.icon--md
	size 32px
	min-width 32px
	img
		width: 100%

.icon--lg
	size 48px
	min-width 48px
	img
		width: 100%

.icon--lgx
	size 64px
	min-width 64px
	img
		width: 100%
	+below(640px)
		size 48px
		min-width 48px

.icon--xl
	size 80px
	min-width 80px

.icon--xxl
	size 128px
	min-width 128px

.icon--left
	margin-left: 10px

.icon--right
	margin-right: 10px

for $listIconItem in $listIcon
	.icon--{$listIconItem}
		size $listIconItem px
		min-width $listIconItem px
		img
			width: 100%
	for $windowSizeItem in $windowSize
		.{$windowSizeItem[0]}__icon--{$listIconItem}
			@media only screen and (max-width: $windowSizeItem[1]px)
				size $listIconItem px
				min-width $listIconItem px
				img
					width: 100%
// icons === end

