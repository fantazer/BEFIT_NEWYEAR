// line height
.type--lh-1
	line-height:1
.type--lh-1_2
	line-height:1.2
.type--lh-1_4
	line-height:1.4
.type--lh-1_6
	line-height:1.6
// line height === end


// type align
$typeAlign = ("type--left" left),\
							("type--center" center),\
							("type--right" right)

for $itemType in $typeAlign
	.{$itemType[0]}
		text-align $itemType[1]
	for $windowSizeItem in $windowSize
		.{$windowSizeItem[0]}__{$itemType[0]}
			@media only screen and (max-width: $windowSizeItem[1]px)
				text-align $itemType[1]
// type align === end


font('Ubuntu','Ubuntu-Regular',400)
font('Ubuntu','Ubuntu-Medium',500)
font('Ubuntu','Ubuntu-Bold',700)

$v-font = 'Ubuntu', sans-serif

typeSize(fontSm,font)
	+below(768px)
		font-size font px
	font-size fontSm px

.type--sm
	typeSize(12,10)

.type--smx
	typeSize(14,12)

.type--main
	typeSize(16,16)

.type--md
	typeSize(20,18)

.type--mdx
	typeSize(24,20)

.type--lg
	typeSize(32,24)

.type--lgx
	typeSize(44,28)

.type--xl
	typeSize(64,44)
	line-height: 1.2
	+below(380px)
		font-size: 36px

.type--secondary
	color $typeSecondary

.type--primary
	color $typePrimary

.type--bold
	font-weight bold

.type--500
	font-weight: 500

.type--false
	text-decoration: none
	position relative
	&:before
		content ''
		position absolute
		top 50%
		left -0.3em
		height: 0.12em
		width: calc(100% + 0.6em)
		background: $stateError
		opacity: .8

.type--nowrap
	white-space nowrap

.type--ellipsis
	white-space: nowrap
	display: inline-block
	overflow: hidden
	text-overflow: ellipsis
	word-wrap: normal

